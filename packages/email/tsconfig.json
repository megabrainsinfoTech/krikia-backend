    "lib": ["es5", "es6"],
    "module": "ESNext",
    "target": "es6",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
